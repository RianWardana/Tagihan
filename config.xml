<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rianwardana.tagihan" version="16.07" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tagihan</name>
    <description>
        Tagihan Rian
    </description>
    <author email="gmail@rianwardana.com" href="http://rianwardana.com">
        Rian Wardana
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/images/icon.png" />
        <preference name="Orientation" value="portrait" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#388e3c" />
    <engine name="android" spec="~4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.0" />
</widget>
